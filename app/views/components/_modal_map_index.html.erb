<div class="modal-map-container">
  <div class="modal_card">
    <%= cl_image_tag product.photo, height: 150, width: 150, crop: :fill %>
  </div>
  <div class="container-title-offer-index">
    <div class="title-map-index">
      <%= product.title.capitalize %>
    </div>
      <div class="offer-length-index">

       <p>Offres: <%= product.offers.length %></p>
      </div>
  </div>
  <div class="link-modal-index">
  <%= link_to "Voir le produit", product_path(product), class: "link-modal-index"   %>
    </div>
</div>
