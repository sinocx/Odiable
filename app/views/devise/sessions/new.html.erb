<div class="main-container">
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-4 col-md-offset-7">
      <div class="form-log-in">
      <h2>S'identifier</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="form-email-password">
          <%= f.input :email,:label => "Adresse email", required: false, autofocus: true, placeholder: "jean@caramail.com" %>
          <%= f.input :password, :label => "Mot de passe", required: false, placeholder: "***********" %>
        </div>
          <%= f.input :remember_me, :label => "Se souvenir de moi", class: 'specific-class', as: :boolean if devise_mapping.rememberable? %>
          </div>
        <div class="form-actions">
          <%= f.button :submit, "Se connecter", class: "btn-bleue" %>
            <%= render "devise/shared/links" %>
        </div>
      <% end %>
</div>
    </div>
  </div>
</div>
</div>
