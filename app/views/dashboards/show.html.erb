<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="content-dashboard-show">
            <%= @product.title %>
            <%= @product.description %>
            <%= @product.status %>
            <%= link_to "retour au dashboard", dashboards_path %>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="content-dashboard-show">
          <% @offers.each do |offer|  %>
            <div class="offer">
              <%= offer.transporter.user.first_name %>
              <%= offer.description %>
              <%= offer.price %>
              <% if @product.user == current_user %>
                <%= link_to "Validé", validate_offer_path(@product,offer)  %>
                <%= link_to "Refusé", refused_offer_path(@product,offer)  %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
