
<div class="dashboard">
    <div class="dash-sidebar">
      <div class="mes-produits">
        <h1><%= "Mes Produits" %></h1>
      </div>
    </div>
    <div class="container-card-dash">
    <div class="container-fluid">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-xs-12 ">
          <div class="dash-card">
            <div class="dash-card-photo" style="background-image: url(<%= cl_image_path product.photo,crop: :fill %>)">
            </div>
            <div class="dash-card-description">
            <!--   <div class="dash-description-title">
                <p><%= product.title.capitalize %></p>
              </div> -->
              <div class="dash-desc-address">
                <div class="dash-description-aaad">
                  <div class="dash-description-ad">
                    <i class="far fa-circle"></i>
                    <p><%= product.ad %></p>
                  </div>
                  <div class="dash-description-aa">
                    <i class="fas fa-circle"></i>
                    <p><%= product.aa %></p>
                  </div>
                </div>
                  <!-- <div class="dash-description-desc">
                   <p><%= product.description.capitalize %></p>
                  </div> -->
              </div>
              <div class="button-dash-all">
                <div class="button-dash-edit">
                  <p><a href="#" data-product-id="<%= product.id %>">VOIR OFFRE ( <%= product.offers.length %> )</a></p>
                </div>
                <div class="my-btn-delete">
                 <p>
                   <%= link_to "Editer", edit_product_path(product) %>
                 </p>
                </div>
                <div class="my-btn-delete">
                  <p>
                    <%= link_to "Supprimer", product_path(product), method: :delete %>
                  </p>
                </div>
              </div>
            </div>
          </div>
            <div class="dash-offer-details hidden", data-offer-id="<%= product.id%>">
              <% product.offers.each do |offer| %>
                <div class="offer-<%= offer.id %> ">
                  <%= render "dashboards/offer", offer: offer, product: product%>
                </div>
              <% end %>
            <!-- </div> -->
          </div>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
