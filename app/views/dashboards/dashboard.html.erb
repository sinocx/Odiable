<% if current_user.transporter %>
  <ul class="nav nav-tabs " role="tablist">
    <li role="presentation" class="custom-nav"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Mes Produits</a></li>
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Mes offres</a></li>
  </ul>
<% else %>
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Mes Produits</a></li>
  </ul>
<% end %>
  <!-- Tab panes -->
<div class="wrap-dash" >
  <div class="container">
    <div class="tab-content">
      <div role="tajbpanel" class="tab-pane fade in active" id="home">
      <!--   <p>Bonjour</p> -->
      </div>
      <div role="tabpanel" class="tab-pane fade" id="profile">
      </div>
      <div role="tabpanel" class="tab-pane fade" id="messages">
        <div class="row">
          <% @products.each do |product| %>
          <div class="col-xs-12">
            <!-- <div class="wrapper"> -->
              <div class="food">
                <div class="cover">
                  <%= cl_image_tag product.photo, height: 200, width: 200, crop: :fill%>
                  <label>
                    <i>
                      <svg x="0px" y="0px" width="17px" height="17px">
                      <%= image_tag("logo-odiable", id: "logo-dash") %>
                      </svg>
                    </i>
                    <font>Vos annonces en cours</font>
                  </label>
                  <div class="description-dashboard">
                    <strong>Description:</strong>
                    <%= product.description %>

                   <div class="dash-prod-link">
                    <p><%= link_to "Editer", edit_product_path(product), class: "btn btn-success" %></p>
                    <p><%= link_to "Supprimer", product_path(product), method: :delete, class: "btn btn-danger" %></p>
                    <a href="#", data-product-id="<%= product.id %>", class= "btn btn-primary">Vos offres</a>

                  </div>
                </div>
                <div class="info">
                  <a href="#" class="recipe">
                    <i>
