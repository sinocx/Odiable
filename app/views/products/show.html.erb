<div class="container">
  <div class="with-link">
    <div>
      <%= link_to "Toutes les annonces", products_path%>
    </div>
    <div class="content-show">
      <div class="card-show">
        <div class ="img-show">
          <%= cl_image_tag @product.photo, height: 300, width: 400, crop: :fill %>
        </div>
        <div class="titre-show">
          <h2> <%= @product.title %></h2>
          <p>  <%= @product.description %></p>
        </div>
      </div>
      <div class="map-show">
        <div
          id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
        ></div>
      </div>
    </div>
  </div>
</div>
