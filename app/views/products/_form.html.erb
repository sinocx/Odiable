<%= simple_form_for(@product) do |f| %>

  <div id="step-1">
    <%= f.input :title,:label => "Titre", placeholder: "Votre product" %>
    <%= f.input :description, placeholder: "Description de votre produit" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, "Continuer", class: "btn btn-primary" %>
  </div>

  <div class='hidden' id='step-2'>
    <%= f.input :ad,:label => "Adresse de départ", placeholder: "Adresse de départ" %>
    <%= f.input :ad,:label => "Adresse de départ", placeholder: "Adresse d'arrivée" %>
    <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.button :submit, "Précédent", class: "btn btn-primary" %>
    <%= f.button :submit, "Valider", class: "btn btn-primary" %>
  </div>

<% end %>
